# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (PostgreSQL for OAuth)
DATABASE_URL=postgresql://user:password@localhost:5432/n8n_mcp

# Zitadel OAuth Configuration
ZITADEL_CLIENT_ID=your-client-id
ZITADEL_CLIENT_SECRET=your-client-secret
ZITADEL_ISSUER=https://your-instance.zitadel.cloud
ZITADEL_REQUIRED_ROLE=

# Security
HMAC_SECRET=your-hmac-secret-min-32-chars
ENCRYPTION_KEY=your-32-byte-encryption-key-hex-or-base64
SELF_URL=http://localhost:3000

# Token Expiration (optional)
ACCESS_TOKEN_EXPIRES_IN_SECONDS=60
REFRESH_TOKEN_EXPIRES_IN_SECONDS=2592000

# n8n API Configuration (optional)
N8N_API_URL=https://your-n8n-instance.com/api/v1
N8N_API_KEY=your-n8n-api-key
