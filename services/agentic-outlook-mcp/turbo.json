{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputs": ["openapi.json"]
    },
    "db:generate": {
      "outputs": ["drizzle/**/*"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev": {
      "inputs": ["src/**/*", "package.json", "tsconfig.json", "nest-cli.json"],
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "interruptible": true
    }
  }
}
