# Conventional Commits configuration
# Validated by: github:proventuslabs/scriptorium#cz
# See: https://www.conventionalcommits.org/

[settings]
# Allow multiple scopes (e.g., feat(teams-mcp,mcp-oauth): ...)
multi-scope = true
# Do not require a scope in commit messages
require-scope = false
# Scope must be defined in [scopes] section
defined-scope = true
# Files must match the scope's glob patterns
enforce-patterns = true

[types]
feat = A new feature
fix = A bug fix
docs = Documentation only changes
chore = Other changes that don't modify src or test files
refactor = A code change that neither fixes a bug nor adds a feature
test = Adding missing tests or correcting existing tests
build = Changes that affect the build system or external dependencies
revert = Reverts a previous commit

