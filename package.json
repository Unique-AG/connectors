{
  "name": "@unique-ag/mcp-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "concurrently --kill-others \"turbo watch build --filter='./packages/*'\" \"turbo dev\"",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "concurrently": "^9.2.1",
    "turbo": "^2.5.6",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22"
  }
}
