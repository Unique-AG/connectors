{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "tag-separator": "@",
  "include-v-in-tag": false,
  "separate-pull-requests": true,
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "initial-version": "0.1.0",
  "packages": {
    "services/factset-mcp": {
      "extra-files": [
        {
          "type": "yaml",
          "path": "deploy/helm-charts/factset-mcp/Chart.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "deploy/helm-charts/factset-mcp/Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "generic",
          "path": "deploy/helm-charts/factset-mcp/values.yaml"
        }
      ]
    },
    "services/outlook-mcp": {
      "extra-files": [
        {
          "type": "yaml",
          "path": "deploy/helm-charts/outlook-mcp/Chart.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "deploy/helm-charts/outlook-mcp/Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "generic",
          "path": "deploy/helm-charts/outlook-mcp/values.yaml"
        }
      ]
    },
    "services/sharepoint-connector": {
      "prerelease": true,
      "prerelease-type": "beta",
      "versioning": "prerelease",
      "extra-files": [
        {
          "type": "yaml",
          "path": "deploy/helm-charts/sharepoint-connector/Chart.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "deploy/helm-charts/sharepoint-connector/Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "generic",
          "path": "deploy/helm-charts/sharepoint-connector/values.yaml"
        }
      ]
    }
  }
}
