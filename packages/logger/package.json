{
  "name": "@unique/logger",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "rimraf -rf dist && swc src --out-dir dist --strip-leading-paths --config-file .swcrc",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check-types": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch"
  },
  "dependencies": {
    "nestjs-pino": "^4.4.0",
    "pino-http": "^10.5.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "1.13.3",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "pino-http-print": "^3.1.0",
    "pino-pretty": "^13.1.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.3.9"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": "@swc/jest"
    },
    "rootDir": "./src",
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.ts",
      "<rootDir>/**/?(*.)+(spec).ts"
    ]
  }
}
