{
  "name": "@unique-ag/mcp-oauth",
  "description": "Modular authentication module for MCP servers with OAuth 2.1",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest watch --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --config vitest.coverage.config.ts && istanbul-badges-readme --style='square-flat'",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/throttler": "^6.4.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "nestjs-zod": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "serialize-error-cjs": "^0.2.0",
    "typeid-js": "^1.2.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "@suites/di.nestjs": "^3.0.1",
    "@suites/doubles.vitest": "^3.0.1",
    "@suites/unit": "^3.0.1",
    "@swc/core": "^1.13.5",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.14",
    "@types/passport": "^1.0.17",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-istanbul": "^3.2.4",
    "istanbul-badges-readme": "^1.9.0",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^10 || ^11",
    "@nestjs/core": "^10 || ^11",
    "@opentelemetry/api": "^1.9.0",
    "nestjs-otel": "^7",
    "passport": "^0.7"
  }
}
